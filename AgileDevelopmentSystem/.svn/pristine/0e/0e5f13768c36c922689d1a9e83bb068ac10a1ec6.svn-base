<Window x:Class="EasyWpfLoginNavigateExample.View.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegistrationForm" Height="447" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1087FF"/>
                <GradientStop Color="#FF9CFFFF" Offset="0.158"/>
                <GradientStop Color="White" Offset="0.772"/>
                <GradientStop Color="#FF002064" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="56" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" TextAlignment="Center" FontSize="24" FontFamily="Calibri" Foreground="White"><Run Language="en-gb" Text="Sign Up"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="10,100,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top" Width="272"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="10,150,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="272"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="10,200,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="272"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="10,250,0,0" TextWrapping="Wrap" Text="Confirm Password" VerticalAlignment="Top" Width="272"/>
        <Button Content="Register" HorizontalAlignment="Left" Height="59" Margin="0,358,0,-1" VerticalAlignment="Top" Width="292" Background="#FF50B7DC" BorderBrush="#FF0017FF" BorderThickness="0" Foreground="White" FontSize="22" FontFamily="Calibri" TextOptions.TextFormattingMode="Display"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="50" Background="{x:Null}" FontFamily="Calibri" FontWeight="Bold" TextOptions.TextFormattingMode="Display" FontSize="16" Foreground="White"/>

    </Grid>
</Window>
