<Window x:Class="EasyWpfLoginNavigateExample.View.EmailForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email" Height="440" Width="500">
    <Grid>
        <Label Content="To" HorizontalAlignment="Left" Margin="50,46,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxTo" HorizontalAlignment="Left" Height="23" Margin="108,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
        <Label Content="CC" HorizontalAlignment="Left" Margin="50,74,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="108,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
        <Label Content="Message:" HorizontalAlignment="Left" Margin="50,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxBody" HorizontalAlignment="Left" Height="183" Margin="108,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" ScrollViewer.CanContentScroll="True"/>
        <Label Content="Subject" HorizontalAlignment="Left" Margin="50,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxSubject" HorizontalAlignment="Left" Height="23" Margin="108,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="323,355,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
